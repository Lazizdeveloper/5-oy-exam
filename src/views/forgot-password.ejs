<%- include('layouts/main', { body: undefined }) %>
<div class="card p-4 shadow-lg animate__animated animate__zoomIn">
  <h2 class="card-title text-center"><i class="fas fa-key"></i> Parolni tiklash</h2>
  <% if (error) { %>
    <div class="alert alert-danger animate__animated animate__shakeX"><%= error %></div>
  <% } %>
  <% if (success) { %>
    <div class="alert alert-success animate__animated animate__bounceIn"><%= success %></div>
  <% } %>
  <form action="/forgot-password" method="POST" id="forgotForm">
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <div class="input-group">
        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
        <input type="email" class="form-control" name="email" placeholder="Email" required>
      </div>
    </div>
    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-key"></i> Tiklash havolasini yuborish</button>
  </form>
</div>