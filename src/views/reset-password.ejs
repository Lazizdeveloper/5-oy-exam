<%- include('layouts/main', { body: undefined }) %>
<div class="card p-4 shadow-lg animate__animated animate__zoomIn">
  <h2 class="card-title text-center"><i class="fas fa-lock"></i> Yangi parol</h2>
  <% if (error) { %>
    <div class="alert alert-danger animate__animated animate__shakeX"><%= error %></div>
  <% } %>
  <% if (success) { %>
    <div class="alert alert-success animate__animated animate__bounceIn"><%= success %></div>
  <% } %>
  <form action="/reset-password/<%= token %>" method="POST" id="resetForm">
    <div class="mb-3">
      <label for="password" class="form-label">Yangi parol</label>
      <div class="input-group">
        <span class="input-group-text"><i class="fas fa-lock"></i></span>
        <input type="password" class="form-control" name="password" placeholder="Yangi parol" required>
      </div>
    </div>
    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-save"></i> Saqlash</button>
  </form>
</div>