<%- include('layouts/main', { body: undefined }) %>
<div class="card p-4 shadow-lg animate__animated animate__zoomIn">
  <h2 class="card-title text-center"><i class="fas fa-users"></i> Foydalanuvchilar</h2>
  <% if (error) { %>
    <div class="alert alert-danger animate__animated animate__shakeX"><%= error %></div>
  <% } %>
  <ul class="list-group mt-3">
    <% users.forEach(user => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= user.username %> (Email: <%= user.email %>, Role: <%= user.role %>)
      </li>
    <% }) %>
  </ul>
  <a href="/profile" class="btn btn-sm btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Orqaga</a>
</div>